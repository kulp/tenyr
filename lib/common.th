#ifndef COMMON_TAS_
#define COMMON_TAS_

#define rel(Label)          p + (@Label - .)
#define goto(Label)         p <- rel(Label)
#define call(Target)        [o] <- p + 3 ; o <- o - 1 ; goto(Target)
#define jnzrel(Cond,Label)  n <- Cond & (@Label - (. + 2)) ; p <- p + n + 1
#define push(Reg)           Reg -> [o] ; o <- o - 1
#define pop(Reg)            o <- o + 1 ; Reg <- [o]
#define ret                 pop(p)

#endif

